<!doctype html>

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>archedbrows</title>
        <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    </head>

    <body>
        <header>
            <a href="/">
                {% include "_logo.svg.jinja" %}
                <h1>
                    archedbrows
                </h1>
            </a>
            <button type="button" popovertarget="add-post">
                ＋
            </button>
        </header>

        <div id="add-post" popover>
            <h2>
                add post
            </h2>
            <form>
                <input name="url" placeholder="https://example.com/posts/abc123">
                <button>
                    ⮕
                </button>
            </form>
        </div>

        <main>
            {% block content %}
            {% endblock content %}
        </main>
    </body>
</html>